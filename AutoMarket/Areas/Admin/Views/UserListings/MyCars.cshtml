@model List<AutoMarket.Models.Car>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h2>My Listed Cars (Admin)</h2>

@if (Model.Any())
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Car Brand</th>
                <th>Car Model</th>
                <th>Actions</th> 
            </tr>
        </thead>
        <tbody>
            @foreach (var car in Model)
            {
                <tr>
                    <td>@car.Id</td>
                    <td>@(car.CarBrand != null ? car.CarBrand.BrandName : "N/A")</td>
                    <td>@(car.CarModel != null ? car.CarModel.ModelName : "N/A")</td>
                    <td>
                  
                        <a asp-action="Edit" asp-route-id="@car.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@car.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No cars listed.</p>
}
